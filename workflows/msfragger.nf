/*
========================================================================================
    IMPORT MODULES
========================================================================================
*/

include { readFileAsString } from '../nf-modules/lib/Utils'

/*
========================================================================================
    IMPORT LOCAL MODULES/SUBWORKFLOWS
========================================================================================
*/

include { MSF }               from '../nf-modules/modules/msfragger/main'

/*
========================================================================================
    RUN MAIN WORKFLOW
========================================================================================
*/

workflow MSFRAGGER {

    take:
    tag_order
    raw_files
    msf_params_file

    main:
    //
    // SUBMODULE: execute MSFragger
    //
    MSF(tag_order, raw_files, readFileAsString(msf_params_file))

    // return channels
    ch_ofile         = MSF.out.ofile

    emit:
    ofile       = ch_ofile
}

/*
========================================================================================
    THE END
========================================================================================
*/
